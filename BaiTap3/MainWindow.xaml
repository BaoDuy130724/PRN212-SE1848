<Window x:Class="BaiTap3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTap3"
        mc:Ignorable="d"
        Title="SE182424-Lê Trần Bảo Duy" Height="389" Width="755">
    <Grid>
        <GroupBox HorizontalAlignment="Center" Height="121" Header="Bạn thấy hệ thống này thế nào ?" Margin="0,23,0,0" VerticalAlignment="Top" Width="712" FontSize="20" BorderBrush="#FFDCD3D3">
            <StackPanel Height="83">
                <RadioButton GroupName="hethong" Name="radRatTot" FontSize="15">Rất tốt</RadioButton>
                <RadioButton GroupName="hethong" Name="radTot" FontSize="15">Tốt</RadioButton>
                <RadioButton GroupName="hethong" Name="radTamDuoc" FontSize="15">Tạm Được</RadioButton>
                <RadioButton GroupName="hethong" Name="radKhongTot" FontSize="15">Không Tốt</RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox HorizontalAlignment="Center" Height="79" Header="Giới tính bạn là gì ?" Margin="0,164,0,0" VerticalAlignment="Top" Width="712" FontSize="20" BorderBrush="#FFDCD3D3">
            <StackPanel>
                <RadioButton GroupName="gioithieu" x:Name="radNam" FontSize="15">Nam</RadioButton>
                <RadioButton GroupName="gioithieu" x:Name="radNu" FontSize="15">Nữ</RadioButton>
            </StackPanel>
        </GroupBox>
        <GroupBox HorizontalAlignment="Center" Height="69" Header="Chọn tác vụ:" Margin="0,286,0,0" VerticalAlignment="Top" Width="712" FontSize="20">
            <StackPanel Orientation="Horizontal" Margin="41,0,292,0">
                <Button x:Name="btnGuiphanhoi" Content="Gửi phản hồi" Height="25" Width="125" Margin="20,0" FontSize="15" Click="BtnGui_Click"/>
                <Button x:Name="btnHuy" Content="Hủy" Height="25" Width="125" Margin="20,0" FontSize="15" Click="BtnHuy_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
