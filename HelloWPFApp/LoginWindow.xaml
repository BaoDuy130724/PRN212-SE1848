<Window x:Class="HelloWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="372" Width="768">
    <Grid>
        <Label Content="Đăng nhập quản lý hệ thống" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Width="800" FontWeight="Bold" FontSize="20" Foreground="#FFF7F7F7" HorizontalContentAlignment="Center">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF27D9D9" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Username:" HorizontalAlignment="Left" Height="36" Margin="102,98,0,0" VerticalAlignment="Top" Width="98" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="38" Margin="102,152,0,0" VerticalAlignment="Top" Width="98" FontSize="20"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Height="27" Margin="0,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360"/>
        <Button x:Name="btnDangNhap" HorizontalAlignment="Left" Height="35" Margin="237,244,0,0" VerticalAlignment="Top" Width="100" FontSize="20" Content="Dang nhap" Background="#FF00FD22" Foreground="#FFFCFCFC" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoat" HorizontalAlignment="Left" Height="35" Margin="452,244,0,0" VerticalAlignment="Top" Width="99" FontSize="20" Foreground="#FFFFF6F6" Background="#FFF00B0B" Click="btnThoat_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Height="28" Margin="0,162,0,0" VerticalAlignment="Top" Width="359"/>

    </Grid>
</Window>
