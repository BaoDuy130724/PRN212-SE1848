<Window x:Class="MyStoreWpfApp_EntityFramework.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EntityFramework"
        mc:Ignorable="d"
        Title="LeTranBaoDuy-SE182424-Đăng nhập hệ thống" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" HorizontalAlignment="Center" Margin="0,43,0,343">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Red" Offset="0.0"/>
                    <GradientStop Color="Yellow" Offset="0.5"/>
                    <GradientStop Color="Green" Offset="1.0" />
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,135,0,0"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="182,135,0,262" Width="481" SelectionOpacity="-1" TextWrapping="Wrap" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="45" Margin="78,213,0,0" VerticalAlignment="Top" Width="104" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" Margin="182,217,0,180" Width="481"/>
        <Button x:Name="btnLogin" Content="Login" FontSize="20" HorizontalAlignment="Left" Height="45" Margin="182,307,0,0" VerticalAlignment="Top" Width="159" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" FontSize="20" HorizontalAlignment="Left" Height="45" Margin="504,307,0,0" VerticalAlignment="Top" Width="159" Click="btnExit_Click"/>
    </Grid>
</Window>
